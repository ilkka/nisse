{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mix compile",
      "type": "shell",
      "command": "mix compile",
      "problemMatcher": ["$mixCompileWarning", "$mixCompileError"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "mix phx.server",
      "type": "shell",
      "command": "mix phx.server",
      "problemMatcher": ["$mixCompileWarning", "$mixCompileError"],
      "group": "build"
    },
    {
      "label": "mix test",
      "type": "shell",
      "command": "mix test",
      "problemMatcher": [
        "$mixTestFailure",
        "$mixCompileWarning",
        "$mixCompileError"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "mix ecto.setup",
      "type": "shell",
      "command": "mix ecto.setup",
      "problemMatcher": ["$mixCompileWarning", "$mixCompileError"]
    }
  ]
}
