<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "plant-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :acquired_on %>
  <%= date_select f, :acquired_on, value: Date.utc_today(), year: [options: 1900..(Date.utc_today().year + 1)] %>
  <%= error_tag f, :acquired_on %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
