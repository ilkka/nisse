<div>
  <h2><%= @title %></h2>

  <.form
    :let={f}
    for={@changeset}
    id="room-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :label) %>
    <%= text_input(f, :label) %>

    <%= submit("Save", phx_disable_with: "Saving...") %>
  </.form>
</div>

